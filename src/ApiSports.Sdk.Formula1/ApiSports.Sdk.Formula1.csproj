<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\versions.props" />
    <PropertyGroup>
        <Version>$(ApiSportsSdkFormula1Version)</Version>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <PackageId>ApiSports.Sdk.Formula1</PackageId>
        <Description>Formula 1 module for the ApiSports .NET SDK. Includes F1 endpoints and models, designed for AOT-ready System.Text.Json source-generated serialization.</Description>
        <PackageTags>apisports;formula1;sdk</PackageTags>
    </PropertyGroup>

    <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
        <ProjectReference Include="..\ApiSports.Sdk.Abstractions\ApiSports.Sdk.Abstractions.csproj" />
        <ProjectReference Include="..\ApiSports.Sdk.Core\ApiSports.Sdk.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
        <PackageReference Include="ApiSports.Sdk.Abstractions" Version="$(ApiSportsSdkAbstractionsVersion)" />
        <PackageReference Include="ApiSports.Sdk.Core" Version="$(ApiSportsSdkCoreVersion)" />
    </ItemGroup>
</Project>
