<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\versions.props" />
    <PropertyGroup>
        <Version>$(ApiSportsSdkFootballVersion)</Version>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <PackageId>ApiSports.Sdk.Football</PackageId>
        <Description>Football module for the ApiSports .NET SDK. Includes football endpoints and models, with AOT-ready System.Text.Json source-generated serialization.</Description>
        <PackageTags>apisports;football;sdk</PackageTags>
    </PropertyGroup>

    <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
        <ProjectReference Include="..\ApiSports.Sdk.Abstractions\ApiSports.Sdk.Abstractions.csproj" />
        <ProjectReference Include="..\ApiSports.Sdk.Core\ApiSports.Sdk.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
        <PackageReference Include="ApiSports.Sdk.Abstractions" Version="$(ApiSportsSdkAbstractionsVersion)" />
        <PackageReference Include="ApiSports.Sdk.Core" Version="$(ApiSportsSdkCoreVersion)" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Models\" />
    </ItemGroup>
</Project>
